#!/bin/bash

# File containing the JSON data
JSON_FILE="data.json"

# Extract values using jq:
# - name ( .name )
# - height ( .height )
# - weight ( .weight )
# - type(s) ( .types[].type.name )

name=$(jq -r '.name' "$JSON_FILE" | sed 's/\b\(.\)/\u\1/')   # Capitalize first letter
height=$(jq -r '.height' "$JSON_FILE")
weight=$(jq -r '.weight' "$JSON_FILE")

# Extract all types, capitalize first letter and join with comma if multiple
types=$(jq -r '.types[].type.name' "$JSON_FILE" | sed 's/\b\(.\)/\u\1/' | awk '{ printf "%s%s", sep, $0; sep=", " }')

# Format and print output (height and weight are decimeters/hectograms â€” convert to meters and kg)
# According to PokeAPI:
# height is in decimetres => meters = height / 10
# weight is in hectograms => kg = weight / 10

height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%d\", $weight / 10}")

echo "$name is of type $types, weighs ${weight_kg}kg, and is ${height_m}m tall."
