#!/bin/bash

# List of Pokémon to fetch
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DATA_DIR="pokemon_data"
ERROR_LOG="errors.txt"
MAX_RETRIES="3"
SLEEP_TIME=1   # Delay between retries and requests (seconds)

# Create the data directory if it doesn't exist
mkdir -p "$DATA_DIR"

# Clear or create error log file
: > "$ERROR_LOG"

for pokemon in "${POKEMON_LIST[@]}"
do
    echo "Fetching data for $pokemon..."
    
    attempt=1
    success=0

    while [ $attempt -le $MAX_RETRIES ]; do
        curl -sSf "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$DATA_DIR/$pokemon.json" 2>>"$ERROR_LOG"
        if [ $? -eq 0 ]; then
            echo "Saved data to $DATA_DIR/$pokemon.json ✅"
            success=1
            break
        else
            echo "Attempt $attempt for $pokemon failed."
            ((attempt++))
            sleep $SLEEP_TIME
        fi
    done

    if [ $success -eq 0 ]; then
        echo "[$(date)] ERROR: Failed to fetch data for $pokemon after $MAX_RETRIES attempts." >> "$ERROR_LOG"
        echo "Skipping $pokemon."
    fi

    # Wait between requests to avoid hitting API rate limits
    sleep $SLEEP_TIME
done
